<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0" src="{{course.image}}" alt="{{course.name}} image">
            </div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">{{course.name}}</h1>
                <div class="fs-5 mb-5">
                    {{!-- <span class="text-decoration-line-through">$45.00</span> --}}
                    <span>{{course.price}} VND</span>
                </div>
                <p class="lead">{{course.description}}</p>
                <div class="d-flex">
                    {{!-- <input id="inputQuantity" class="form-control text-center me-3" type="num" value="1"
                      style="max-width: 3rem"> --}}
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <a href="/" class="btn">
                            <i class="bi-cart-fill me-1"></i>Back
                        </a>
                    </button>
                </div>
            </div>
        </div>
    </div>
